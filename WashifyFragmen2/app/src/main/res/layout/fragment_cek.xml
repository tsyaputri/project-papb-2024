<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".pemesananlayanan.CekFragment">

    <TextView
        android:id="@+id/textViewPrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilih Jenis Pakaian:"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:id="@+id/spinnerJenisPakaian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewPrompt"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <Button
        android:id="@+id/buttonCekKetersediaan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cek Ketersediaan"
        android:layout_below="@id/spinnerJenisPakaian"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/textViewCekFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cek Fragment"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/buttonCekKetersediaan"
        android:layout_marginTop="20dp" />

</RelativeLayout>
